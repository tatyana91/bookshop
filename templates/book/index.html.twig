{% extends 'base.html.twig' %}

{% block title %}{{ 'Book index'|trans }}{% endblock %}

{% block container %}
    <h1>{{ 'Book index'|trans }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ 'Idbook'|trans }}</th>
                <th>{{ 'Title'|trans }}</th>
                <th>{{ 'Author'|trans }}</th>
                <th>{{ 'Price'|trans }}</th>
                <th>{{ 'Genre'|trans }}</th>
                <th>{{ 'actions'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td>{{ book.idbook }}</td>
                <td>{{ book.title }}</td>
                <td>{{ book.author }}</td>
                <td>{{ book.price }}</td>
                <td>{{ book.genre }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('book_show', {'idbook': book.idbook}) }}">{{ 'show'|trans }}</a>
                    <a class="btn btn-primary" href="{{ path('book_edit', {'idbook': book.idbook}) }}">{{ 'edit'|trans }}</a>
                    <div style="display: inline-block">
                        {{ include('book/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">{{ 'no records found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('book_new') }}">{{ 'Create new'|trans }}</a>
{% endblock %}
